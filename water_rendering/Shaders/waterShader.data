		Vec3 unnormalizedNormal;
		Vec3 fragmentWorldPosition;
	};
	fragUniforms = [[Gui, Json]] {
		Vec3 [[NoJsonSerialize, NoGui]] cameraPosition;
		Vec3 [[NoJsonSerialize, NoGui]] directionalLightDirection;
		color3 scatteringColor;
